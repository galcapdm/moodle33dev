<div id="capdmhelpdesk-holder" class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

            <div id="capdmhelpdesk-header-holder">
                <h1>{{#str}}capdmhelpdeskname, local_capdmhelpdesk{{/str}}
                <span id="add_new_message" class="fa-stack fa-lg">
                    <i class="fa fa-circle fa-stack-2x"></i>
                    <i id="add_new_message_indicator" class="fa fa-plus fa-stack-1x" title="{{# str }}togglenewform, local_capdmhelpdesk{{/str}}"></i>
                </span>
                </h1>
                <p>{{# str}}intro, local_capdmhelpdesk{{/str}}</p>

                <div id="capdmhelpdesk-feedback" class="alert alert-info" style="display: none;">
                <p></p>
                </div>
            </div>

            <!-- Message list holder -->
            <div id="capdmhelpdesk-msg-list" class="helpdesk-holder">
                {{^messages}}
                    <h2 class="light-text">{{# str }}nomessagesyet, local_capdmhelpdesk{{/str}}</h2>
                {{/messages}}
                {{#messages}}
                    <div id="msgid_{{id}}" class="messageholder">
                        <div class="status status_{{status}}">
                            <div class="messagedetails">
                                <p class="subjectline">{{subject}}</p>
                                <p><span class="submitdate">{{# str }} submitdate, local_capdmhelpdesk, { "datesubmitted": {{# quote }}{{submitdate}}{{/ quote }} }{{/str}}</span></p>
                            </div>
                        </div>
                    </div>
                <div id="msgid_{{id}}_replies" class="messageholder replies" style="display: none;">
                    <div class="waiting"><i class="fa fa-spinner fa-pulse fa-2x fa-fw"></i><span class="sr-only">{{# str}}waiting, local_capdmhelpdesk{{/str}}</span></div>
                </div>
                {{/messages}}
            </div>
            <!-- New message holder -->
            <div id="capdmhelpdesk-new-msg-holder" class="helpdesk-holder">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <form id="form_new_message" class="form_validate" action="#" method="post">
                            <div>
                                <p>{{#str}}addnewmessagehere, local_capdmhelpdesk{{/str}}</p>
                            </div>
                            <div>
                                <label for"subject">{{#str}}subject, local_capdmhelpdesk{{/str}}</label>
                                <input id="subject" name="subject" class="form-control" placeholder="Enter a short title here" type="text"></input>
                            </div>

                            <div>
                                <label for"message">{{#str}}message, local_capdmhelpdesk{{/str}}</label>
                                <textarea id="message" name="message" class="form-control" placeholder="Enter your message here" type="textbox" rows="6"></textarea>
                            </div>

                            <div>
                                <label for"category">{{#str}}category, local_capdmhelpdesk{{/str}}</label>
                                <input id="category" name="category" class="form-control" type="text"></input>
                            </div>

                            <div>
                                <button class="btn btn-primary">{{#str}}submit{{/str}}</button>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>