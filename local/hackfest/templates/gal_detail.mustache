{{!
    @template local_hackfest/gal_detail

    This shows the user details page.

}}
<div data-region="index-page-gal">
    {{^user}}
        <p>No user info to display right now</p>
    {{/user}}
    {{#user}}
        <h1>User info is as follows:-</h1>
        <h4>First name: {{firstname}}</h4>
        <h4>Last name: {{lastname}}</h4>
        <h4>Username: {{username}}</h4>
        <h4>Email: {{email}}</h4>
    {{/user}}
</div>