{{!
    @template local_hackfest/message_replies

    This shows the replies to the supplied message ID.

}}
<div data-region="message-replies-{{replyto}}"  class="reply-holder">
    <p>Reply to original message id:{{replyto}}</p>
    {{^replies}}
        <p>This message does not have any replies at this time.</p>
    {{/replies}}
    {{#replies}}
    <div class="replier-{{originator}}">
        <p class="message-reply">{{ message }}</p>
        <span class="reply-date-header"></span>
        <p><span class="reply-date">{{# str }} replyby, local_hackfest, { "replier": {{# quote }}{{fullame}}{{/ quote }}, "replytime": {{# quote }}{{submitdate}}{{/ quote }} }{{/str}}</span></p>
    </div>
    {{/replies}}
</div>